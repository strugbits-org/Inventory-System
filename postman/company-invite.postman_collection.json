{
  "info": {
    "name": "ResinWerks - Company Invite API",
    "description": "API collection for testing the Company Invite module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Superadmin",
      "item": [
        {
          "name": "Create Company Invite",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"companyEmail\": \"newcompany@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/invites/v1/company-invite",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invites", "v1", "company-invite"]
            },
            "description": "Create a new company invite. Sends an email to the company with an invitation link."
          },
          "response": []
        },
        {
          "name": "Get Pending Invites",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/invites/v1/company-invites",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invites", "v1", "company-invites"]
            },
            "description": "Get all pending company invites that haven't expired or been accepted."
          },
          "response": []
        },
        {
          "name": "Cancel Invite",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/invites/v1/company-invite/:inviteId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invites", "v1", "company-invite", ":inviteId"],
              "variable": [
                {
                  "key": "inviteId",
                  "value": "uuid-here",
                  "description": "The ID of the invite to cancel"
                }
              ]
            },
            "description": "Cancel a pending invite. Cannot cancel already accepted invites."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Public",
      "item": [
        {
          "name": "Verify Invite Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/invites/invite/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invites", "invite", "verify"]
            },
            "description": "Verify an invite token. Used when a company clicks the invitation link."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        },
        "description": "Check if the server is running"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
