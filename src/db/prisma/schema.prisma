// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.svg"
}

// Enums
enum UserRole {
  SUPERADMIN
  COMPANY
  EMPLOYEE
}

enum JobStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Models
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      UserRole
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)

  locationId String?
  location   Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)

  adminOfCompany Company? @relation("CompanyAdmin")

  createdJobs Job[] @relation("CreatedBy")

  @@index([companyId])
  @@index([locationId])
  @@index([email])
}

model Company {
  id                   String   @id @default(uuid())
  name                 String   @unique
  email                String   @unique
  approvedBySuperadmin Boolean  @default(false)
  isActive             Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  companyAdminId  String? @unique
  companyAdmin    User?   @relation("CompanyAdmin", fields: [companyAdminId], references: [id], onDelete: SetNull)


  users            User[]
  locations        Location[]
  materialsStock   Stock[]
  jobs             Job[]
  overageOverrides CompanyOverageOverride[]
  invites          Invite[]

  @@index([companyAdminId])
  @@index([email])
}

model Location {
  id                   String   @id @default(uuid())
  companyId            String
  name                 String
  approvedBySuperadmin Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  company        Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  employees      User[]
  materialsStock Stock[]
  jobs           Job[]

  invites Invite[]

  @@index([companyId])
}

model Invite {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  locationId String?
  location   Location? @relation(fields: [locationId], references: [id], onDelete: Cascade)

  role UserRole

  @@index([companyId])
  @@index([locationId])
  @@index([email])
}

model Material {
  id          String   @id @default(uuid())
  name        String   @unique
  type        String
  unit        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  variants     MaterialVariant[]
  jobMaterials JobMaterial[]
}

model MaterialVariant {
  id             String   @id @default(uuid())
  materialId     String
  name           String // e.g. "Red 528", "Blue High-Solid"
  color          String?
  type           String?
  pricePerGallon Decimal  @db.Decimal(10, 2)
  coverageArea   Decimal  @db.Decimal(10, 2)
  overageRate    Decimal  @db.Decimal(10, 2)
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  material         Material                 @relation(fields: [materialId], references: [id], onDelete: Cascade)
  stock            Stock[]
  jobMaterials     JobMaterial[]
  overageOverrides CompanyOverageOverride[]

  @@unique([materialId, name])
  @@index([materialId])
}

model Stock {
  id         String   @id @default(uuid())
  companyId  String
  locationId String
  variantId  String
  inStock    Decimal  @db.Decimal(10, 2)
  useQty     Decimal  @default(0) @db.Decimal(10, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  company  Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  location Location        @relation(fields: [locationId], references: [id], onDelete: Cascade)
  variant  MaterialVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([companyId, locationId, variantId])
  @@index([companyId])
  @@index([locationId])
  @@index([variantId])
}

model Job {
  id              String    @id @default(uuid())
  jobId           String
  companyId       String
  locationId      String
  createdByUserId String
  jobCost         Decimal   @db.Decimal(10, 2)
  clientFirstName String
  clientLastName  String?
  clientAddress   String
  areaSqFt        Decimal   @db.Decimal(10, 2)
  duration        Int
  status          JobStatus @default(PENDING)
  date            DateTime
  installDate     DateTime
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  company      Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  location     Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  createdBy    User     @relation("CreatedBy", fields: [createdByUserId], references: [id])
  jobMaterials JobMaterial[]

  @@unique([jobId, companyId])
  @@index([companyId])
  @@index([locationId])
  @@index([createdByUserId])
}

model JobMaterial {
  id           String   @id @default(uuid())
  jobId        String
  materialId   String
  variantId    String
  quantityUsed Decimal  @db.Decimal(10, 2)
  unit         String
  costAtTime   Decimal  @db.Decimal(10, 2)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  job      Job             @relation(fields: [jobId], references: [id], onDelete: Cascade)
  material Material        @relation(fields: [materialId], references: [id], onDelete: Restrict)
  variant  MaterialVariant @relation(fields: [variantId], references: [id], onDelete: Restrict)

  @@unique([jobId, variantId])
  @@index([jobId])
  @@index([variantId])
}

model CompanyOverageOverride {
  id          String   @id @default(uuid())
  companyId   String
  variantId   String
  overageRate Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  company Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  variant MaterialVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([companyId, variantId])
}
