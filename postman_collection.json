{
  "info": {
    "name": "Resinwerks API",
    "description": "API Collection for Resinwerks Inventory System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/v1",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "company_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "location_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "job_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "material_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "variant_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.accessToken) {",
                  "    pm.collectionVariables.set(\"access_token\", jsonData.data.accessToken);",
                  "    console.log(\"Access token set\");",
                  "}",
                  "if (jsonData.data && jsonData.data.user) {",
                  "   if (jsonData.data.user.companyId) {",
                  "       pm.collectionVariables.set(\"company_id\", jsonData.data.user.companyId);",
                  "   }",
                  "   if (jsonData.data.user.locationId) {",
                  "       pm.collectionVariables.set(\"location_id\", jsonData.data.user.locationId);",
                  "   }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Companies",
      "item": [
        {
          "name": "Get All Companies",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/companies",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "companies"
              ]
            }
          }
        },
        {
          "name": "Get Company By ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/companies/{{company_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "companies",
                "{{company_id}}"
              ]
            }
          }
        },
        {
          "name": "Create Company (Invite)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"new@company.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/companies/invite",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "companies",
                "invite"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Get Jobs",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/jobs",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "jobs"
              ]
            }
          }
        },
        {
          "name": "Create Job",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jobId\": \"JOB-2023-001\",\n  \"jobCost\": 5000,\n  \"clientFirstName\": \"John\",\n  \"clientLastName\": \"Doe\",\n  \"clientAddress\": \"123 Main St\",\n  \"areaSqFt\": 1500,\n  \"duration\": 5,\n  \"date\": \"2023-12-25\",\n  \"installDate\": \"2023-12-26\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/jobs",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "jobs"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Material Variants",
      "item": [
        {
          "name": "Get Variants for Material",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/materials/{{material_id}}/variants",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "materials",
                "{{material_id}}",
                "variants"
              ]
            }
          }
        },
        {
          "name": "Get Variant By ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/material-variants/{{variant_id}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "material-variants",
                "{{variant_id}}"
              ]
            }
          }
        },
        {
          "name": "Update Stock",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"adjustment\": 100,\n  \"reason\": \"Restock\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/material-variants/{{variant_id}}/stock",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "material-variants",
                "{{variant_id}}",
                "stock"
              ]
            }
          }
        },
        {
          "name": "Import Variants",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "description": "Upload CSV file"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/material-variants/import",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "material-variants",
                "import"
              ]
            }
          }
        }
      ]
    }
  ]
}