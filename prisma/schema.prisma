// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.svg"
}

// Enums
enum UserRole {
  SUPERADMIN
  COMPANY
  EMPLOYEE
}

enum JobStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Models
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      UserRole
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  locationId String?
  location   Location? @relation(fields: [locationId], references: [id])

  createdJobs Job[] @relation("CreatedBy")

  @@index([companyId])
  @@index([locationId])
  @@index([email])
}

model Company {
  id                   String   @id @default(uuid())
  name                 String   @unique
  approvedBySuperadmin Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  users            User[]
  locations        Location[]
  materialsStock   Stock[]
  jobs             Job[]
  pricingOverrides CompanyPricingOverride[]
  invites          Invite[]
}

model Location {
  id                   String   @id @default(uuid())
  companyId            String
  name                 String
  approvedBySuperadmin Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  company        Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  employees      User[]
  materialsStock Stock[]
  jobs           Job[]

  invites Invite[]

  @@index([companyId])
}

model Invite {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  locationId String?
  location   Location? @relation(fields: [locationId], references: [id], onDelete: Cascade)

  role UserRole

  @@index([companyId])
  @@index([locationId])
  @@index([email])
}

model Material {
  id          String   @id @default(uuid())
  name        String   @unique
  type        String
  unit        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  globalPricing           GlobalPricing[]
  companyPricingOverrides CompanyPricingOverride[]
  stock                   Stock[]
  jobMaterials            JobMaterial[]
}

model GlobalPricing {
  id          String   @id @default(uuid())
  materialId  String   @unique
  basePrice   Decimal  @db.Decimal(10, 2)
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
}

model CompanyPricingOverride {
  id            String   @id @default(uuid())
  companyId     String
  materialId    String
  overridePrice Decimal  @db.Decimal(10, 2)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@unique([companyId, materialId])
  @@index([companyId])
  @@index([materialId])
}

model Stock {
  id                String   @id @default(uuid())
  companyId         String
  locationId        String
  materialId        String
  quantity          Decimal  @db.Decimal(10, 2)
  lowStockThreshold Decimal  @default(0) @db.Decimal(10, 2)
  unit              String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@unique([companyId, locationId, materialId])
  @@index([companyId])
  @@index([locationId])
  @@index([materialId])
}

model Job {
  id              String    @id @default(uuid())
  companyId       String
  locationId      String
  createdByUserId String
  clientName      String
  clientAddress   String
  status          JobStatus @default(PENDING)
  startDate       DateTime
  endDate         DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  location  Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  createdBy User     @relation("CreatedBy", fields: [createdByUserId], references: [id])

  jobMaterials JobMaterial[]

  @@index([companyId])
  @@index([locationId])
  @@index([createdByUserId])
}

model JobMaterial {
  id           String   @id @default(uuid())
  jobId        String
  materialId   String
  quantityUsed Decimal  @db.Decimal(10, 2)
  unit         String
  costAtTime   Decimal  @db.Decimal(10, 2)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  job      Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  material Material @relation(fields: [materialId], references: [id], onDelete: Restrict)

  @@index([jobId])
  @@index([materialId])
}
